<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fae8"
    tools:context="com.example.sys1.crack_it.SeniorAdd">

    <EditText
        android:id="@+id/Ques1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Enter Question"
        android:inputType="textMultiLine"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="52dp" />

    <EditText
        android:id="@+id/Ques2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ques3"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Enter Question"
        android:inputType="textMultiLine"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="172dp" />

    <EditText
        android:id="@+id/Ques3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ques1"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter Question"
        android:inputType="textMultiLine|textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="286dp" />

    <EditText
        android:id="@+id/Ques4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ques2"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Enter Question"
        android:inputType="textMultiLine|textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/submit"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

        android:background="#c538ec"
        android:fontFamily="cursive"
        android:text="SUBMIT"
        android:textColor="#faf7f7"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Ques3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/voice"
         />

    <Button
        android:id="@+id/m3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Ques2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/voice"
         />

    <Button
        android:id="@+id/m4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/voice"
        android:layout_alignBottom="@+id/Ques4"
        android:layout_alignStart="@+id/m3"
        android:layout_marginBottom="12dp"
         />

    <Button
        android:id="@+id/m1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/voice" />

</RelativeLayout>
